@page "/products/monitor/{productId?}/{pageNumber?}"
@using Domain.EntityModels.Additional.Common
@model App.Pages.Products.MonitorModel;
@{
}
<!--This script is absolutely required in this place. Don't move it to the end of view!!!' -->
<script src="~/js/productView.js"></script>

<!--Display header of page-->
@await Component.InvokeAsync(
                "ProductHeader",
                    new
                    {
                        product = Model.Name,
                        producer = Model.Producer,
                        rate = Model.AverageRate,
                        reviewsAmount = Model.ReviewsAmount,
                        productId = Model.ProductId,
                        productType = Model.ProductType
                    })

<div class="container">
    <div class="row">
        <div class="col">

            <!--Display images of pruduct-->
            @await Component.InvokeAsync(
                     "ImagesArea",
                     new
                     {
                         requestPath = "/products/monitor",
                         bonusProductImagesId = Model.BonusProductImagesId,
                         productId = Model.ProductId
                     })

        </div>
        <div class="col">


            @await Component.InvokeAsync(
                     "BuyProductInProductPage",
                     new
                     {
                         productId = Model.ProductId,
                         availability = Model.Availability,
                         productAmount = Model.ProductAmount,
                         userType = Model.UserType,
                         price = Model.Price,
                         pageNumber = Model.PageNumber
                     })

            <table class="mt-5 shortProductTable">
                <tr>
                    <td>
                        Producent
                    </td>
                    <td>
                        @Model.Producer
                    </td>
                </tr>
                <tr>
                    <td>
                        Przekątna ekranu
                    </td>
                    <td>
                        @Model.ScreenDiagonal
                    </td>
                </tr>
                <tr>
                    <td>
                        Częstotliwość odświerzania ekranu
                    </td>
                    <td>
                        @Model.ScreenRefreshRate
                    </td>
                </tr>
                <tr>
                    <td>
                        Typ ekranu
                    </td>
                    <td>
                        @Model.ScreenType
                    </td>
                </tr>
                <tr>
                    <td>
                        Wbudowane głośniki
                    </td>
                    <td>
                        @(Model.BuiltInSpeakers == true ? "Tak" : "Nie")
                    </td>
                </tr>
                <tr>
                    <td>
                        Czas reakcji
                    </td>
                    <td>
                        @Model.Latency ms
                    </td>
                </tr>
                <tr>
                    <td>
                        Kolor
                    </td>
                    <td>
                        @Model.Color
                    </td>
                </tr>
            </table>
        </div>
    </div>

</div>
<div class="row mt-5 mb-5">
    <div class="col">
        <h2 class=" mb-2">Opis Produktu</h2>
        <div>
            @Model.Description
        </div>
    </div>
</div>
<div row mt-5>
    <h2 class="mb-2">Pełna specyfikacja</h2>
    <table class="fullProductTable">
        <tr>
            <td>
                Producent
            </td>
            <td>
                <div style="margin-left: 45%">@Model.Producer</div>
            </td>
        </tr>
        <tr>
            <td>
                Czas gwarancji
            </td>
            <td>
                <div style="margin-left: 45%">@Model.GuarantyTime miesięcy
            </td>
        </tr>
        <tr>
            <td>
                Dodatkowe informacje
            </td>
            <td>
                <div style="margin-left: 45%">@Model.AdditionalInfo</div>
            </td>
        </tr>
        <tr>
            <td>
                Przekątna ekranu
            </td>
            <td>
                <div style="margin-left: 45%">@Model.ScreenDiagonal
            </td>
        </tr>
        <tr>
            <td>
                Częstotliwość odświerzania ekranu
            </td>
            <td>
                <div style="margin-left: 45%">@Model.ScreenRefreshRate
            </td>
        </tr>
        <tr>
            <td>
                Typ ekranu
            </td>
            <td>
                <div style="margin-left: 45%">@Model.ScreenType
            </td>
        </tr>
        <tr>
            <td>
                Wbudowane głośniki
            </td>
            <td>
                <div style="margin-left: 45%">@(Model.BuiltInSpeakers == true ? "Tak" : "Nie")
            </td>
        </tr>
        <tr>
            <td>
                Czas reakcji
            </td>
            <td>
                <div style="margin-left: 45%">@Model.Latency ms
            </td>
        </tr>
        <tr>
            <td>
                Kolor
            </td>
            <td>
                <div style="margin-left: 45%">@Model.Color</div>
            </td>
        </tr>
    </table>
</div>

<!---Display reviews-->
@await Component.InvokeAsync(
                    "ReviewsArea",
                    new
                    {
                        reviewsData = Model.ReviewsData,
                        productId = Model.ProductId,
                        pageNumber = Model.PageNumber,
                        reviewsAmount = Model.ReviewsAmount,
                        reviewsPageAmount = Model.ReviewsPageAmount
                    }
                )
</div>













